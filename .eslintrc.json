{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "standard",
        "eslint:recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6
    },
    "plugins": [
        "prefer-arrow"
    ],
    "rules": {
        "func-call-spacing": 1,
        "no-unexpected-multiline": 1,
        "eqeqeq": 1,
        "no-eval": 2,
        "array-bracket-newline": 1,
        "brace-style": 1,
        "comma-spacing": 1,
        "no-var": 0,
        "indent": ["warn", 4, {
            "SwitchCase": 1
        }],
        "semi": [1, "always"],
        "quotes": [2, "backtick", "avoid-escape"],
        "no-undef": 1,
        "no-unused-vars": 1,
        "prefer-const": 0,
        "no-mixed-operators": 0,
        "no-prototype-builtins": 1,
        "curly": 0,
        "prefer-arrow-callback": 1,
        "prefer-template": 1,
        "no-unreachable-loop": 1,
        "no-unused-expressions": 0,
        "no-useless-escape": 0,
        "camelcase": 0,
        "node/no-callback-literal": 0,
        "no-return-assign": 0,
        "eol-last": 1,
        "arrow-body-style": ["warn", "as-needed"],
        "func-style": 1,
        "prefer-arrow/prefer-arrow-functions": ["warn", {
            "disallowPrototype": true,
            "singleReturnOnly": true,
            "classPropertiesAllowed": false
        }]
    }
}